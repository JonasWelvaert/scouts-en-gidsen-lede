block content
  h1 Leiding
  div(class = 'leidingDiv')
    for leiding in leiding_list
      div(class = 'leiding') 
        p #{leiding.name} #{leiding.leeftijd} #{leiding.tak} 
        img(src=leiding.afbeelding)
